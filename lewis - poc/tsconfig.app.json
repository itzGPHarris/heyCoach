{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["src/**/*", "my-auth-app/src/theme.ts", "my-auth-app/mocks", "my-auth-app/src/UnifiedEntry.stories.tsx", "my-auth-app/src/UnifiedEntry.tsx", "my-auth-app/src/preview.tsx"],
  "exclude": ["node_modules", "dist", "src/**/__tests__/*"]
}
